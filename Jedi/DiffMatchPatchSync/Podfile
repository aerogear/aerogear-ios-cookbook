source 'https://github.com/CocoaPods/Specs.git'

xcodeproj 'AeroGearSyncDemo.xcodeproj'
platform :ios, '8.0'
use_frameworks!

pod 'Starscream', '0.9.3'
pod 'AeroGearSyncClient', :git => "https://github.com/aerogear/aerogear-ios-sync-client.git", :branch => "master"
pod 'AeroGearSync/Core', :git => "https://github.com/aerogear/aerogear-ios-sync.git", :branch => "master"
pod 'AeroGearSync/DiffMatchPatch', :git => "https://github.com/aerogear/aerogear-ios-sync.git", :branch => "master"

target 'AeroGearSyncDemoTests' do
	pod 'Starscream', '0.9.3'
	pod 'AeroGearSyncClient', :git => "https://github.com/aerogear/aerogear-ios-sync-client.git", :branch => "master"
	pod 'AeroGearSync/Core', :git => "https://github.com/aerogear/aerogear-ios-sync.git", :branch => "master"
	pod 'AeroGearSync/DiffMatchPatch', :git => "https://github.com/aerogear/aerogear-ios-sync.git", :branch => "master"
end